{
  "name": "legal_assistant_desktop",
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@types/better-sqlite3": "^7.6.13",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "chromadb": "^3.0.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^11.0.2",
    "lucide-react": "^0.544.0",
    "next": "14.2.28",
    "openai": "^6.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "28.1.0",
    "electron-builder": "26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "3.3.3",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.1"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"next dev -p 3004\" \"wait-on http://localhost:3004 && electron .\"",
    "build": "next build",
    "start": "next start",
    "electron": "electron .",
    "package": "next build && electron-builder build --win --x64"
  },
  "build": {
    "appId": "com.legalassistant.app",
    "productName": "Legal Assistant",
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "files": [
      ".next/**/*",
      "electron/**/*",
      "public/**/*",
      "data/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    },
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "version": "1.0.0",
  "description": "100% local desktop application for legal case analysis and narrative management",
  "author": "Legal Assistant Team"
}
